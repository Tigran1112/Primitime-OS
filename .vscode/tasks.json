{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run OS",
            "type": "shell",
            "command": "zsh",
            "args": [
                "-c", 
                "source ~/.zshrc && ob src/load.asm src/kernel.c src/linker.ld build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}